white = #fff
black = #000

html, body
    width 100%
    height 100%

body
    background white
    font-family 'Open Sans', sans-serif
    font-size 15px

h1, h2, h3, h4, h5, h6
    font-family 'Open Sans', sans-serif

.spacer-50
    height 50px

.spacer-25
    height 25px

.margin-top-10
    margin-top 10px

.circle
    width 100px
    height 100px
    -webkit-border-radius 50px
    border-radius 50px
    overflow hidden
    margin 0 auto

.circle img
    width 100px
    height 100px
    z-index 1

.title-icons-pipe
    border-right solid 3px black
    padding-right 8px

